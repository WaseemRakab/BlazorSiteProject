<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Home</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
        <ul class="nav flex-column">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="fas fa-home fa-lg" aria-hidden="true"></span>
                    <span class="m-2">About Me</span>
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="portfolio">
                    <span class="fas fa-briefcase fa-lg" aria-hidden="true"></span>
                    <span class="m-2">My Portfolio</span>
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="contact">
                    <span class="fas fa-id-card fa-lg" aria-hidden="true"></span>
                    <span class="m-2">Contact Me</span>
                </NavLink>
            </li>
        </ul>

</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
